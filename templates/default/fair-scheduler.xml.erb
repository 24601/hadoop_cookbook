<?xml version="1.0"?>

<!-- about these variables: http://hadoop.apache.org/core/docs/r0.21.0/fair_scheduler.html. -->
<!-- generated by chef, changes will be overwritten -->

<allocations>
  <% if @queues %>
  <% @queues.each do |queue, queue_value| %>
  <queue name="<%= queue %>">
  <% queue_value.each do |k, v| %>
    <%= "<#{k}>#{v}</#{k}>" %>
  <% end %>
  </queue>
  <% end %>
  <% end %>

  <% if @users %>
  <% @users.each do |user, user_value| %>
  <user name="<%= user %>">
    <% user_value.each do |k, v| %>
    <%= "<#{k}>#{v}</#{k}>" %>
    <% end %>
  </user>
  <% end %>
  <% end %>

  <% if @defaults %>
  <% @defaults.each do |k, v| %>
  <%= "<#{k}>#{v}</#{k}>" %>
  <% end %>
  <% end %>

</allocations>
